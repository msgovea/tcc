<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_make_publication"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".principal.PostActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_publication"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/dividerTop"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_publication"
        app:layout_constraintStart_toStartOf="parent"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@drawable/user"
        fresco:roundAsCircle="true"
        fresco:roundWithOverlayColor="@android:color/white" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_publication2"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@id/dividerTop"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="64dp"
        app:layout_constraintEnd_toEndOf="@+id/avatar_publication"
        app:layout_constraintTop_toTopOf="@+id/avatar_publication"
        fresco:actualImageScaleType="focusCrop"
        fresco:layout_constraintBottom_toBottomOf="@+id/et_publication"
        fresco:layout_constraintStart_toStartOf="parent"
        fresco:placeholderImage="@drawable/user"
        fresco:roundAsCircle="true"
        fresco:roundWithOverlayColor="@android:color/white" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_post"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            android:elevation="4dp"
            android:paddingRight="16dp"
            android:titleTextColor="@android:color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:text="@string/prompt_post"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/text_make_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:text="@string/prompt_post"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="1dp" />


    <EditText
        android:id="@+id/et_publication"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:gravity="left"
        android:hint="@string/prompt_publication"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

</android.support.constraint.ConstraintLayout>
